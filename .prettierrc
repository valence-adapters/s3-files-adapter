{
  "plugins": ["prettier-plugin-apex"],

  "overrides": [
    {
      "files": "**/lwc/**/*.js",
      "options": {
        "printWidth": 120,
        "singleQuote": true,
        "useTabs": true
      }
    },
    {
      "files": "**/*.cls",
      "options": {
        "printWidth": 120,
        "useTabs": true,
        "apexInsertFinalNewline": false
      }
    },
    {
      "files": "**/lwc/**/*.html",
      "options": {
        "parser": "lwc",
        "printWidth": 120,
        "useTabs": true
      }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": { "parser": "html" }
    }
  ]
}
